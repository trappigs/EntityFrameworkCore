@model IEnumerable<Kurs>

@{
    ViewData["Title"] = "Kurs Listele";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.KursId)</th>
            <th>@Html.DisplayNameFor(m => m.Baslik)</th>
            <th>@Html.DisplayNameFor(m => m.Ogretmen.AdSoyad)</th>
            <th style="width: 150px;">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.KursId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Baslik)
                </td>
                <td>@Html.DisplayFor(modelItem => item.Ogretmen.AdSoyad)</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.KursId">Düzenle</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.KursId">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-action="Create" asp-controller="Kurs">Kurs Ekle</a>