@model KursViewModel

@{
    ViewData["Title"] = "Kurs Düzenle";
}

<h2>Kurs Düzenleme</h2>
<hr />

<div class="row">
    <div class="col-8">
        <form method="post" asp-controller="Kurs" asp-action="Edit">
            <div asp-validation-summary="All"></div>
            <input type="hidden" asp-for="KursId" />

            <div class="mb-3">
                <label class="form-label" asp-for="Baslik">Kurs Adı</label>
                <input asp-for="Baslik" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="OgretmenId" class="form-label">Öğretmen</label>
                <select asp-for="OgretmenId" asp-items="ViewBag.Ogretmenler" class="form-select">
                    <option value="">Öğretmen Seçiniz</option>
                </select>
            </div>


            <button type="submit" class="btn btn-primary">
                Kaydet
            </button>
        </form>
    </div>

    <div class="col-4">
        <h4>Öğrenciler</h4>
        <hr />
        <ul>
            @foreach (var item in Model.KursKayitlari)
            {
                <li>@item.Ogrenci.AdSoyad</li>
            }
        </ul>
    </div>
</div>

