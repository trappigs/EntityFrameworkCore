@model Ogretmen

<h2>Öğrenci Ekle</h2>
<hr />
<form asp-controller="Ogretmen" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Ad" class="form-label">Öğretmen Adı</label>
        <input asp-for="Ad" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Soyad" class="form-label">Öğretmen Soyadı</label>
        <input asp-for="Soyad" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Eposta" class="form-label">Öğretmen E-Posta</label>
        <input asp-for="Eposta" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Telefon" class="form-label">Öğretmen Telefon</label>
        <input asp-for="Telefon" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="BaslamaTarihi" class="form-label">Başlama Tarihi</label>
        <input asp-for="BaslamaTarihi" class="form-control" />
    </div>


    <button type="submit" class="btn btn-primary">
        Kaydet
    </button>

</form>